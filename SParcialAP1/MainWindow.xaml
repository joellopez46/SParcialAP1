<Window x:Class="SParcialAP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SParcialAP1"
        mc:Ignorable="d"
        Title="Menu proyecto" Height="500" Width="500">
    <Grid>
        <StackPanel>
            <Menu Height="24" FontSize="15">
                <MenuItem Header="Registros" >
                    <MenuItem x:Name="rRegistroMenuItem" Click="rRegistroMenuItem_Click" Header="Registrar Proyecto"/>
                </MenuItem>

                <MenuItem Header="Consultas" >
                    <MenuItem x:Name="cConsultaMenuItem" Click="cConsultaMenuItem_Click" Header="Consultar Proyecto"/>
                </MenuItem>

            </Menu>
        </StackPanel>

    </Grid>
</Window>